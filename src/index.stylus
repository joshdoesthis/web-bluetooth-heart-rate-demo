@import 'normalize.css/normalize.css'

$max-width-content = 1024px

html {
  height 100%
}

body {
  height 100%
  margin 0
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  color #263238
}

#root {
  height 100%
  display flex
  flex-direction column
}

header {
  background-color white
  display flex
  justify-content space-between
  border-bottom 1px solid #ECEFF1
  position sticky
  top 0px
  z-index 1

  div.container {
    width 100%
    box-sizing border-box
    max-width $max-width-content
    margin 0 auto
    padding 1em
    display flex
    align-items center
    justify-content space-between
    flex-wrap nowrap
    min-height 1.5em
    gap 1em

    h1 {
      margin 0
      font-size 1em 
      cursor default
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

      :last-child {
        opacity 0.7
      }

      .svg-inline--fa {
        padding 0 0.4em
      }
    }

    a:link, a:visited {
      color #263238
      text-decoration none
    }
    a:hover, a:active {
      color #263238
      text-decoration underline
    }

    .fa-github {
      font-size 1.5em
    }
  }
}

main {
  padding 1em
  flex-grow 1
  display flex
  justify-content space-between

  div.container  {
    width 100%
    max-width $max-width-content
    margin 0 auto
    display flex
    flex-direction column
    gap 1em

    div.disconnected {
      display flex
      align-items center
      flex-direction row
      gap 1em

      button.connect {
        background-color #00796B
        border 1px solid #009688
        border-radius 0.2em
        color white
        cursor pointer
        font-size 1em
        font-weight bold
        padding 0.5em 1em
        text-transform uppercase
        transition background-color 0.2s ease-in-out

        &:hover {
          background-color #009688
        }
      }
    }

    div.connected {
      display flex
      align-items center
      flex-direction row
      gap 1em

      button.disconnect {
        background-color #C2185B
        border 1px solid #E91E63
        border-radius 0.2em
        color white
        cursor pointer
        font-size 1em
        font-weight bold
        padding 0.5em 1em
        text-transform uppercase
        transition background-color 0.2s ease-in-out

        &:hover {
          background-color #E91E63
        }
      }
    }

    div.heart-rate { 
      display flex
      place-items center
      flex-direction row-reverse
      gap 1em

      span.heart-rate-icon {
        font-size 4em
        cursor default

        .fa-heart {
          color #E91E63
        }
      }

      span.heart-rate-value {
        font-size 4em
        font-weight bold
        cursor default
      }
    }

    div.bar-chart {
      flex-grow 1
      display flex
      flex-direction column
      align-items flex-end
    }

    div.not-supported {
      display flex
      align-items center
      justify-content center
      background-color #FEF9E7
      text-align center
      color #7D6608
      border-radius 0.2em
      padding 1em
      cursor default      

      a:link, a:visited {
        color #7D6608
        cursor pointer
      }
      a:hover, a:active {
        color #7D6608
      }
    }
  }
}

svg {
  g {
    rect {
      fill #ECEFF1
    }
  }
}

@media(prefers-color-scheme: dark) {
  body {
    background-color #263238
    color #CFD8DC
  }

  header {
    background-color #263238
    border-bottom 1px solid #37474F

    div.container {
      a:link, a:visited {
        color #CFD8DC
      }
      a:hover, a:active {
        color #CFD8DC
      }
    }
  }

  main {
    div.container {
      div.disconnected {
        button.connect {
          color #CFD8DC
        }
      }

      div.connected {
        button.disconnect {
          color #CFD8DC
        }
      }

      div.not-supported {
        background-color #37474F
        color #CFD8DC

        a:link, a:visited {
          color #CFD8DC
        }
        a:hover, a:active {
          color #CFD8DC
        }
      }
    }
  }

  svg {
    g {
      rect {
        fill #37474F
      }
    }
  }
}