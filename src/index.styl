@import 'normalize.css/normalize.css'
@import 'colors'

$max-width-content = 1024px

html {
  height 100%
}

body {
  height 100%
  margin 0
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  color $grey-800
}

#root {
  height 100%
  display flex
  flex-direction column
}

header {
  background-color $white
  display flex
  justify-content space-between
  border-bottom 1px solid $grey-200
  position sticky
  top 0px
  z-index 1

  div.container {
    width 100%
    box-sizing border-box
    max-width $max-width-content
    margin 0 auto
    padding 1em
    display flex
    align-items center
    justify-content space-between
    flex-wrap nowrap
    min-height 3.5em
    gap 1em

    h1 {
      margin 0
      font-size 1em 
      cursor default
      overflow hidden
      text-overflow ellipsis
      $white-space nowrap

      :last-child {
        opacity 0.7
      }

      .svg-inline--fa {
        padding 0 0.4em
      }
    }

    a:link, a:visited {
      color $grey-800
      text-decoration none
    }
    a:hover, a:active {
      color $grey-800
      text-decoration underline
    }

    .fa-github {
      font-size 1.5em
    }
  }
}

main {
  padding 1em
  flex-grow 1
  display flex
  justify-content space-between

  div.container  {
    width 100%
    max-width $max-width-content
    margin 0 auto
    display flex
    flex-direction column
    gap 1em

    div.disconnected {
      display flex
      align-items center
      flex-direction row
      gap 1em

      button.connect {
        background-color $teal-800
        border 1px solid $teal
        border-radius 0.2em
        color $white
        cursor pointer
        font-size 1em
        font-weight bold
        padding 0.5em 1em
        text-transform uppercase
        transition background-color 0.2s ease-in-out

        &:hover {
          background-color $teal
        }
      }
    }

    div.connected {
      display flex
      align-items center
      flex-direction row
      gap 1em

      button.disconnect {
        background-color $pink-800
        border 1px solid $pink
        border-radius 0.2em
        color $white
        cursor pointer
        font-size 1em
        font-weight bold
        padding 0.5em 1em
        text-transform uppercase
        transition background-color 0.2s ease-in-out

        &:hover {
          background-color $pink
        }
      }
    }

    div.heart-rate { 
      display flex
      place-items center
      flex-direction row-reverse
      gap 1em

      span.heart-rate-icon {
        font-size 4em
        cursor default

        .fa-heart {
          color $pink
        }
      }

      span.heart-rate-value {
        font-size 4em
        font-weight bold
        cursor default
      }
    }

    div.bar-chart {
      flex-grow 1
      display flex
      flex-direction column
      align-items flex-end
    }

    div.not-supported {
      display flex
      align-items center
      justify-content center
      background-color $deep-purple-50
      text-align center
      color $deep-purple-900
      border-radius 0.2em
      padding 1em
      cursor default      

      a:link, a:visited {
        color $deep-purple-900
        cursor pointer
      }
      a:hover, a:active {
        color $deep-purple-900
      }
    }
  }
}

svg {
  g {
    rect {
      fill $grey-200
    }
  }
}

@media(prefers-color-scheme: dark) {
  body {
    background-color $grey-900
    color $grey-200
  }

  header {
    background-color $grey-900
    border-bottom 1px solid $grey-800

    div.container {
      a:link, a:visited {
        color $grey-200
      }
      a:hover, a:active {
        color $grey-200
      }
    }
  }

  main {
    div.container {
      div.disconnected {
        button.connect {
          color $grey-200
        }
      }

      div.connected {
        button.disconnect {
          color $grey-200
        }
      }

      div.not-supported {
        background-color $grey-800
        color $grey-200

        a:link, a:visited {
          color $grey-200
        }
        a:hover, a:active {
          color $grey-200
        }
      }
    }
  }

  svg {
    g {
      rect {
        fill $grey-800
      }
    }
  }
}